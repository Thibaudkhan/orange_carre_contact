{% extends 'base.html.twig' %}


{% block body %}

    <div class="contact-form container shadow p-5 mb-5 mt-5 rounded" style="height: 70vh;    padding-top: 10vh!important;margin-top: 10vh!important">
        <div class="form-group mb-5">
            {{ form_start(our_form) }}
            {{ form_row(our_form.fullName, {'attr': {'class': 'form-control'}}) }}


        </div>
        <div class="form-group mb-5">
            {{ form_row(our_form.email, {'attr': {'class': 'form-control'}}) }}

        </div>
        <div class="form-group mb-5">
            {{ form_row(our_form.message, {'attr': {'class': 'form-control'}}) }}

        </div>

        <div class="form-group" style="display: flex;">
            <input type="submit" value="Send" class="btn btn-primary py-3 px-5" style="margin: auto">
        </div>
        {{ form_end(our_form) }}
    </div>
    {% for label, flashes in app.session.flashbag.all %}
        {% for flash in flashes %}
            {% if ( label == 'success' ) %}
                <div class="alert alert-success alert-dismissible fade show">
                    {{ flash }}
                </div>
            {% elseif ( label == 'error' ) %}
                <div class="alert alert-danger alert-dismissible fade show">
                    {{ flash }}
                </div>
            {% endif %}
        {% endfor %}
    {% endfor %}
    </div>
{% endblock %}